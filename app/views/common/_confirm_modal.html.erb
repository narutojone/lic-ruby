<div id="modal_warning" tabindex="-1" role="dialog" class="modal modal-warning fade js-confirm-modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" data-dismiss="modal" aria-hidden="true" class="close"><i class="icon s7-close"></i></button>
      </div>
      <div class="modal-body">
        <div class="text-center">
          <div class="i-circle text-danger"><i class="icon s7-attention"></i></div>
          <h4>Wait!</h4>
          <p class="confirm-text">Are you sure you want to delete this?</p>
        </div>
      </div>
      <div class="modal-footer">
        <%= form_tag "", class: "js-confirm-form" do %>
          <input type="hidden" name="_method" value="" class="js-method" />
          <button type="submit" class="btn btn-danger">Yes</button>
          <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
        <% end %>
      </div>
    </div>
  </div>
</div>
