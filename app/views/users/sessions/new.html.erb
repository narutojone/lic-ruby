<div class="panel-heading">
  <!--%= image_tag account_logo_with_branding_restrictions, alt: 'logo', class: 'logo-img' %-->
  <!--h4>Welcome to <!--%= current_account.name %--></h4-->
  <p>Please enter your user information</p>
</div>

<div class="panel-body">
  <%= render 'layouts/flash' %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <!--%= f.hidden_field :account_id, value: current_account.id %-->

    <div class="login-form">
      <div class="form-group form-md-line-input form-md-floating-label">
        <%= f.text_field :email, class: 'form-control' %>
        <i class="icon zmdi zmdi-email"></i>
        <label for="user_email">E-mail</label>
      </div>

      <div class="form-group form-md-line-input form-md-floating-label">
        <%= f.password_field :password, class: 'form-control' %>
        <i class="icon zmdi zmdi-lock"></i>
        <label for="user_password">Password</label>
      </div>

      <div class="form-group login-submit">
        <%= f.submit 'Log me in', class: 'btn btn-primary btn-lg' %>
      </div>

      <div class="form-group footer row">
        <div class="col-xs-12 col-sm-6">
          <%= link_to "Forgot Password?", new_password_path(resource_name) %>
        </div>

        <div class="col-xs-12 col-sm-6 remember">
          <label for="user_remember_me">Remember Me</label>
          <div class="am-checkbox">
            <%= f.check_box :remember_me %>
            <label for="user_remember_me"></label>
          </div>
        </div>
      </div>

    </div>
  <% end %>
</div>
