<%= content_for(:page_title) do %>
  Login
<% end %>

<div class="am-wrapper am-login">
  <div class="am-content">
    <div class="main-content">
      <div class="login-container">
        <div class="panel panel-default">
          <div class="panel-heading">
            <%= image_tag("logo_clr.png", alt: "logo", height: "50px", class: "logo-img") %>
            <h4>Welcome to<br />BSC License Manager</h4>
            <p>Please enter your user information</p>
          </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="login-form">
                <div class="form-group form-md-line-input form-md-floating-label">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                  <i class="icon zmdi zmdi-email"></i>
                  <label for="form_control_1">E-mail</label>
                </div>
                <div class="form-group form-md-line-input form-md-floating-label">
                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                  <i class="icon zmdi zmdi-lock"></i>
                  <label for="form_control_1">Password</label>
                </div>
                <div class="form-group login-submit">
                  <button data-dismiss="modal" type="submit" class="btn btn-primary btn-lg">Log me in</button>
                </div>
                <div class="form-group footer row">
                  <div class="col-xs-12 col-sm-6"><a href="<%= new_user_password_path %>">Forgot Password?</a></div>
                  <% if devise_mapping.rememberable? -%>
                    <div class="col-xs-12 col-sm-6 remember">
                      <label for="remember">Remember Me</label>
                      <div class="am-checkbox">
                        <%= f.check_box :remember_me %>
                        <label for="remember"></label>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
